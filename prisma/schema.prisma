generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

// --- USER MANAGEMENT ---

enum UserTier {
  SMART_USER
  RESELLER
  API_PARTNER
}

model User {
  id            String   @id @default(uuid())
  fullName      String?
  email         String   @unique
  phoneNumber   String   @unique
  passwordHash  String
  tier          UserTier @default(SMART_USER)
  isKycVerified Boolean  @default(false)

  // Security Fields
  failedLoginAttempts Int       @default(0)
  lockoutUntil        DateTime?

  // Relationships
  wallet        Wallet? // Moved balance here
  kycData       KycData?
  transactions  Transaction[]
  refreshTokens RefreshToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, phoneNumber])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

// --- WALLET MANAGEMENT ---

model Wallet {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  balance      Decimal @default(0.00) @db.Decimal(15, 2)
  bonusBalance Decimal @default(0.00) @db.Decimal(15, 2) // For commissions
  totalSpent   Decimal @default(0.00) @db.Decimal(15, 2)

  updatedAt DateTime @updatedAt
}

// --- KYC & VIRTUAL ACCOUNTS ---

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
}

model KycData {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  encryptedBvn String? // Renamed for clarity

  virtualAccountNumber String? @unique
  bankName             String?
  accountReference     String? @unique

  status     KycStatus @default(PENDING)
  verifiedAt DateTime?

  updatedAt DateTime @updatedAt
}

// --- UNIFIED TRANSACTIONS ---

enum TransactionType {
  DATA
  AIRTIME
  RECHARGE_PIN
  CABLE_TV
  ELECTRICITY
  WALLET_FUNDING
  EDUCATION
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  REVERSED
}

model Transaction {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  amount Decimal           @db.Decimal(15, 2)
  fee    Decimal           @default(0.00) @db.Decimal(15, 2)
  type   TransactionType
  status TransactionStatus @default(PENDING)

  reference         String  @unique
  providerReference String? @unique

  metadata Json?

  printedPins RechargePin[]

  createdAt DateTime @default(now())

  @@index([userId, status, type, createdAt])
}

// --- INVENTORY FOR CARD PRINTING ---

enum Network {
  MTN
  GLO
  AIRTEL
  NINE_MOBILE
}

model RechargePin {
  id            String       @id @default(uuid())
  transactionId String?
  transaction   Transaction? @relation(fields: [transactionId], references: [id])

  network      Network
  denomination Int

  pinCode      String
  serialNumber String?
  batchNumber  String?

  isSold Boolean @default(false)

  createdAt DateTime  @default(now())
  soldAt    DateTime?

  @@index([network, denomination, isSold])
}
